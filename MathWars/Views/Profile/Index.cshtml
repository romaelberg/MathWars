@model AppUser

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/profile.css" />

<div class="card mb-3">
    <div class="card-body">
        <div class="profileFlexBlock">
            <div class="contentFlexBlock">
                <h2>@User.Identity.Name</h2>
                <ul>
                    <li><strong>solved tasks: </strong>@((ViewData["userSolvedTasks"] as IList<SolveObj> ?? new List<SolveObj>()).Count)</li>
                    <li><strong>created tasks: </strong>@((ViewData["userTasks"] as IList<WarTask> ?? new List<WarTask>()).Count)</li>
                    @* <li><strong>Last visit: </strong><span class="onlineStatusText">online</span></li> *@
                    @* <li><strong>Registered: </strong>12 years ago</li> *@
                </ul>
                <div class="tableHead">
                </div>
                <div class="ProblemsHeaderBlock userTasksTable">
                    <span>Created tasks</span>
                    <a class="ProblemsHeaderActions" asp-controller="WarTask" asp-action="Create">New task</a>
                </div>
                <table class="table table-striped table-sm userTasksTable">
                    <thead>
                        <tr>
                            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParam"]">Title</a></th>
                            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["TopicSortParam"]">Topic</a></th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in ViewData["userTasks"] as IList<WarTask> ?? new List<WarTask>())
                    {
                        <tr>
                            <td>
                                @item.Title
                            </td>
                            <td>
                                @item.Topic
                            </td>
                            <td>
                                <a asp-controller="WarTask" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                 <a asp-controller="WarTask" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                 <a asp-controller="WarTask" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
