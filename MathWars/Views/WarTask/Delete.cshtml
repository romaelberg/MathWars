@using Microsoft.AspNetCore.Mvc.Localization
@model MathWars.Models.WarTask
@inject IViewLocalizer localizer

@{
    ViewData["Title"] = "Delete";
}

<h1>@localizer["DeleteHeader"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @localizer["Title"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @localizer["Topic"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Topic)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="userName" value='@ViewData["userName"]' />
        <input type="submit" value='@localizer["DeleteBtn"]' class="btn btn-danger" />
    </form>
</div>
